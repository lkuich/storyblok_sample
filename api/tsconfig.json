{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noImplicitAny": false,
    "lib": ["dom", "esnext"],
    "types": ["node"],
    "baseUrl": "src/",
    "paths": {
      "utils/*": ["utils/*"],
    }
  },
  "include": ["@types/*.d.ts", "next-env.d.ts", "src/**/*.ts", "global.d.ts"],
  "exclude": ["node_modules", "build"]
}
