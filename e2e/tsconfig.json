{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noImplicitAny": false,
    "lib": ["dom", "esnext"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "utils/*": ["utils/*"],
    }
  },
  "include": ["@types/*.d.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx", "global.d.ts"],
  "exclude": ["node_modules"]
}
